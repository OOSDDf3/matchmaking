<UserControl x:Class="LinkApplicationGraphics.NVVM.View.MatchingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinkApplicationGraphics.NVVM.View" xmlns:viewmodel="clr-namespace:LinkApplicationGraphics.NVVM.ViewModel" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" d:DataContext="{d:DesignInstance Type=viewmodel:MatchingViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1600"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.01*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>



        <Button Grid.Row="1" Width="250" Content="Reset likes" Command="{Binding ResetLikesCommand}" Background="{x:Null}" BorderBrush="White"/>
        <!-- Profile Picture -->

        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.01*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.01*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="1" Grid.Row="3" Fill="#FF729CA7" Stroke="#FF729CA7" Height="30" Width="Auto" VerticalAlignment="Top" />

            <Border Grid.Column="1" Grid.Row="2" Background="#FF3A4346"/>
            
            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Background="#FF3A4346" CornerRadius="25">
                
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Width="580" Height="530">
                        <Image Source="{Binding MatchPictureImage}"/>
                    </Viewbox>

                    <Grid Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="1" Grid.Column="2" Content = "❤️" HorizontalAlignment = "Left" VerticalAlignment = "Bottom" Height="75" Width="75" Background="#FF36927F" Foreground="White" FontSize="25" FontFamily="Bahnschrift SemiLight" Command="{Binding AcceptMatchCommand}" materialDesign:ButtonAssist.CornerRadius="25">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="50"/>
                                </Style>
                            </Button.Resources>
                            <Button.BorderBrush>
                                <ImageBrush TileMode="None" Stretch="Fill"/>
                            </Button.BorderBrush>
                        </Button>

                        <Button Grid.Column="0" Content = "🗙" HorizontalAlignment = "Right" VerticalAlignment = "Bottom" Height="75" Width="75" Background="#FFAD4B4B" Foreground="White" FontSize="25" FontFamily="Bahnschrift SemiLight" Command="{Binding DeclineMatchCommand}" materialDesign:ButtonAssist.CornerRadius="25" >
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Button.BorderBrush>
                                <ImageBrush TileMode="None" Stretch="Fill"/>
                            </Button.BorderBrush>
                        </Button>
                    </Grid>
                </Grid>
                
                


            </Border>
                  

            <Border CornerRadius="17" Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" Background="#FF729CA7" >

                <Grid Grid.Row="4" Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>


                    <TextBlock Text="{Binding NameMatch}"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"    
                               Foreground="White" FontSize="26"   
                               FontFamily="Bahnschrift Light"
                               Background="Transparent" Grid.ColumnSpan="3"/>

                    <TextBlock Text="Zwolle"
           Margin="20,0,0,0"
           VerticalAlignment="Bottom"    
           Foreground="#FFCECECE" FontSize="16"   
           FontFamily="Bahnschrift Light"
           Background="Transparent" Grid.ColumnSpan="3"/>

                    <TextBlock Text="Interesses"
                               Grid.Row="1"
Margin="20,0,0,10"
VerticalAlignment="Center"    
Foreground="White" FontSize="20"   
FontFamily="Bahnschrift Light"
Background="Transparent"/>



                    <TextBlock Text="{Binding InterestsMatch}"
                               Margin="20,0,0,0"
                                VerticalAlignment="Bottom"
                                Grid.Row="1"
                                Foreground="#FFCECECE" FontSize="18"   
                                FontFamily="Bahnschrift SemiLight"
                                Background="Transparent" Grid.ColumnSpan="3"/>
                </Grid>

            </Border>



        <!-- Placeholder Profile Picture -->

                <!--<Border Width="600" Height="400" Grid.Row="1" Grid.Column="1">
                    <Border.Clip>
                        <RectangleGeometry Rect="0,0,400,400" />
                        -->
                <!-- Set the size you want to display -->
                <!--
                    </Border.Clip>
                    <Image Source="{Binding MatchPictureImage}" Stretch="UniformToFill" />
                </Border>-->

                
            </Grid>
    </Grid>

